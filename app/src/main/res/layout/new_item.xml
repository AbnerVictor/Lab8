<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名:"
        android:id="@+id/text_name"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/inputName"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/text_name"
        app:layout_constraintBaseline_toBaselineOf="@id/text_name"
        app:layout_constraintLeft_toRightOf="@id/text_name"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/inputName"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生日:"
        android:id="@+id/text_birthday"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/inputBirthday"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/text_birthday"
        app:layout_constraintBaseline_toBaselineOf="@id/text_birthday"
        app:layout_constraintLeft_toRightOf="@id/text_birthday"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/inputBirthday"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="礼物:"
        android:id="@+id/text_present"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/text_birthday"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/inputPresent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/text_present"
        app:layout_constraintBaseline_toBaselineOf="@id/text_present"
        app:layout_constraintLeft_toRightOf="@id/text_present"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/inputPresent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="增加"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorGreen"
        app:layout_constraintTop_toBottomOf="@id/text_present"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cancel"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/addNewItems"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorGreen"
        app:layout_constraintTop_toBottomOf="@id/text_present"
        app:layout_constraintLeft_toRightOf="@id/addNewItems"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:id="@+id/cancel"
        />

</android.support.constraint.ConstraintLayout>