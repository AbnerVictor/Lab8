<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名(不可更改):"
        android:id="@+id/text_name"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/editName"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/text_name"
        app:layout_constraintBaseline_toBaselineOf="@id/text_name"
        app:layout_constraintLeft_toRightOf="@id/text_name"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/editName"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生日(点击修改):"
        android:id="@+id/text_birthday"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/editBirthday"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/text_birthday"
        app:layout_constraintBaseline_toBaselineOf="@id/text_birthday"
        app:layout_constraintLeft_toRightOf="@id/text_birthday"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/editBirthday"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="礼物:"
        android:id="@+id/text_present"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/text_birthday"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/editPresent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/text_present"
        app:layout_constraintBaseline_toBaselineOf="@id/text_present"
        app:layout_constraintLeft_toRightOf="@id/text_present"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/editPresent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电话:"
        android:textColor="@color/colorGreen"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/text_present"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/phone"
        android:id="@+id/text_phone"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/text_phone"
        app:layout_constraintLeft_toRightOf="@id/text_phone"
        app:layout_constraintBaseline_toBaselineOf="@id/text_phone"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/phone"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="5dp"
        android:text="无"
        android:textColor="@color/colorGreen"
        android:singleLine="true"
        />

</android.support.constraint.ConstraintLayout>